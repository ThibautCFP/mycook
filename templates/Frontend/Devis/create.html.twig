{% extends "base.html.twig" %}

{% block title %}
	Devis
	{{ parent() }}
{% endblock %}

{% block body %}
	<section class="container mt-4 mb-4">
		<h1 class="text-center">Devis</h1>


		{% if app.user %}
			<div class="card p-3 w-50 mx-auto">
				{{ form_start(form) }}

				<div class="row">
					<div class="col-md-6">{{ form_row(form.lastName) }}</div>
					<div class="col-md-6">{{ form_row(form.firstName) }}</div>
				</div>
				<div class="row">
					<div class="col-md-6">{{ form_row(form.email) }}</div>
					<div class="col-md-6">{{ form_row(form.phone) }}</div>
				</div>
				{{ form_row(form.content) }}
				{{ form_row(form.comment)}}
				{{ form_row(form.rgpd) }}

				<div class="text-center">
					<button type="submit" class="btn btn-primary">Envoyer</button>
				</div>
				{{ form_end(form) }}

			</div>
		{% else %}
			<div class="alert alert-info text-center">
				<p>Vous devez être connecté pour pouvoir envoyer un devis.</p>
				<a href="{{ path('app.login') }}" class="link-warning">Se connecter</a>
			</div>
		{% endif %}

	</section>
{% endblock %}
